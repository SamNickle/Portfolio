<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Sam Nicholson</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@ViewData["Description"]" />
    <style>@Html.Raw(System.IO.File.ReadAllText("wwwroot/css/abovethefold.css"))</style>
    <link rel="shortcut icon" href="~/favicon.png" />
</head>
<body>
    <div class="Header">
        <div class="TopBar">
            <img id="Logo" src="~/Images/Header/Logo.svg" alt="Logo" />
            <nav>
                <a href="#AboutMe">About Me</a>
                <a href="#">Work</a>
                <a href="#">Clients</a>
                <a href="#">Contacts</a>
            </nav>
        </div>
        <div class="NameContainer">
            <div class="NameWrapper">
                <div class="Name">
                    <h1>Sam Nicholson</h1>
                </div>
                <div class="SubHeader">
                    <span>Designer</span>
                    <span>//</span>
                    <span>Optimiser</span>
                    <span>//</span>
                    <span>Developer</span>
                </div>
            </div>
        </div>
    </div>

    @RenderBody()

    <footer></footer>

    <link rel="stylesheet" href="~/css/all.css" asp-append-version="true" lazyload="1" />
    <script src="~/js/all.js" asp-append-version="true" async></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
